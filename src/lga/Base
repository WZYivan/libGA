/** @cond */
#define M_libga_begin \
    namespace lga     \
    {
#define M_libga_end }
/** @endcond */

#ifdef LGA_HEADER_ONLY
/** @cond */
#define M_libga_with_impl (true)
/** @endcond */
#else
/** @cond */
#define M_libga_with_impl (false)
/** @endcond */
#endif

#include <lga/Error>
/** @cond */
#define M_libga_not_impl(P_reason) throw lga::Not_Implement_Error(P_reason)
/** @endcond */

#ifdef LGA_DEBUG
/** @cond */
#define M_libga_debug true
/** @endcond */
#include <print>
#include <iostream>
